    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_dialog_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="UselessParent" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <include layout="@layout/main_dialog_progress_bar" />

            <include layout="@layout/main_dialog_progress_spin" />

            <include layout="@layout/main_dialog_confirm" />
            
        </FrameLayout>
        

</LinearLayout>