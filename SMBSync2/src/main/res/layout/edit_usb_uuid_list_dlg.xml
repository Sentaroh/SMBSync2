<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/edit_usb_uuid_list_dlg_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/edit_usb_uuid_list_dlg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/msgs_edit_usb_uuid_dialog_tittle"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <include layout="@layout/divider_line1_turquoise" />

    <TextView
        android:id="@+id/edit_usb_uuid_list_dlg_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Message view"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffff0000" />

    <ListView
        android:id="@+id/edit_usb_uuid_list_dlg_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false" >
    </ListView>

    <Button
        android:id="@+id/edit_usb_uuid_list_dlg_list_available_uuid_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msgs_edit_usb_uuid_dialog_list_available_uuid"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/edit_usb_uuid_list_dlg_add_specified_uuid_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/msgs_edit_usb_uuid_dialog_add_specific_uuid"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <EditText
            android:id="@+id/edit_usb_uuid_list_dlg_new_uuid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/msgs_profile_sync_task_filter_list_dlg_filter_hint"
            android:inputType="text"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/edit_usb_uuid_list_dlg_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/msgs_common_dialog_cancel" />
        <Button
            android:id="@+id/edit_usb_uuid_list_dlg_ok_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/msgs_common_dialog_save" />

    </LinearLayout>
</LinearLayout>