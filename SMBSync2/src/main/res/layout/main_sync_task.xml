<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_sync_task_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText,DisableBaselineAlignment" >

<!--    <include layout="@layout/divider_line3" />-->

    <TextView
        android:id="@+id/main_sync_task_view_empty_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:text="@string/msgs_main_sync_task_press_add_button_to_create_new_sync_task"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <ListView
        android:id="@+id/main_sync_task_view_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false">
    </ListView>

    <include layout="@layout/context_view_sync_task" />
    
</LinearLayout>