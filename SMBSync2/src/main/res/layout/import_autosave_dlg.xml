<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/import_autosave_dlg_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ButtonStyle,RtlHardcoded" >

    <LinearLayout
        android:id="@+id/import_autosave_dlg_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/import_autosave_dlg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="@string/msgs_import_autosave_dlg_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <include layout="@layout/divider_line1_turquoise" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/import_autosave_dlg_autosave_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="@string/msgs_import_autosave_dlg_autosave_list"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <include layout="@layout/divider_line1" />

        <ListView
            android:id="@+id/import_autosave_dlg_autosave_listview"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1" >
        </ListView>

        <include layout="@layout/divider_line3" />

        <TextView
            android:id="@+id/import_autosave_dlg_manual_saved_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="@string/msgs_import_autosave_dlg_manual_save_list"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <include layout="@layout/divider_line1" />

        <ListView
            android:id="@+id/import_autosave_dlg_manual_save_listview"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1" >
        </ListView>

    </LinearLayout>

    <include layout="@layout/divider_line3" />

    <Button
        android:id="@+id/import_autosave_dlg_select_exported_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:text="@string/msgs_import_autosave_dlg_select_exported_file"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <include layout="@layout/import_autosave_dlg_ok_cancel" />

</LinearLayout>